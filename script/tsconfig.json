{
  "include": [
    "./**/*.ts"
  ],
  "compilerOptions": {
    "moduleResolution": "NodeNext",
    "module": "NodeNext",
    "target": "ES2023",
    "lib": [ "ES2023" ],
    "noEmit": true,
    "allowJs": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "verbatimModuleSyntax": true,
  }
}